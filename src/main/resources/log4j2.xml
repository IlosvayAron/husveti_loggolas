<Configuration status="debug">
    <Properties>
        <Property name="LOG_PATTERN">%d{HH:mm:ss.SSS} [%t] [%X{counter}] %-5level %logger{36} - %msg%n</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{${LOG_PATTERN}}"/>
        </Console>
        <RollingFile name="Statement" fileName="logs/statement_logs/statement.log" filePattern="logs/statement_logs/statement-%d{MM-dd-yyyy}.log.gz">
            <MarkerFilter marker="STATEMENT" onMatch="ACCEPT" onMismatch="DENY"/>
            <TimeFilter start="05:01:00" end="19:59:59" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%highlight{${LOG_PATTERN}}"/>
            <TimeBasedTriggeringPolicy />
        </RollingFile>
        <RollingFile name="TimedStatement" fileName="logs/Györfi_Pál.log" filePattern="logs/Györfi_Pál-%d{MM-dd-yyyy}.log.gz">
            <MarkerFilter marker="STATEMENT" onMatch="ACCEPT" onMismatch="DENY"/>
            <TimeFilter start="20:00:00" end="05:00:00" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%highlight{${LOG_PATTERN}}"/>
            <TimeBasedTriggeringPolicy />
        </RollingFile>
        <RollingFile name="Question" fileName="logs/question_logs/question.log" filePattern="logs/question_logs/question-%d{MM-dd-yyyy}.log.gz">
            <MarkerFilter marker="QUESTION" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%highlight{${LOG_PATTERN}}"/>
            <TimeBasedTriggeringPolicy />
        </RollingFile>
        <RollingFile name="NoMarker" fileName="logs/no_marker_logs/no_marker.log" filePattern="logs/no_marker_logs/no_marker-%d{MM-dd-yyyy}.log.gz">
            <NoMarkerFilter onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%highlight{${LOG_PATTERN}}"/>
            <TimeBasedTriggeringPolicy />
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="Statement"/>
            <AppenderRef ref="Question"/>
            <AppenderRef ref="NoMarker"/>
            <AppenderRef ref="TimedStatement"/>
        </Root>
    </Loggers>
</Configuration>
